{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x mvnw && ./mvnw clean package -DskipTests",
    "startCommand": "java -jar target/qrattendance-0.0.1-SNAPSHOT.jar",
    "run": "java -jar target/qrattendance-0.0.1-SNAPSHOT.jar"
  },
  "deploy": {
    "startCommand": "java -Xmx512m -Xms256m -jar target/qrattendance-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "checks": {
    "enabled": true,
    "path": "/actuator/health",
    "initialDelay": 30,
    "timeout": 5
  }
}