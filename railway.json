{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x mvnw && ./mvnw clean package -DskipTests",
    "startCommand": "ls -la target/ && java -jar target/*.jar",
    "run": "ls -la target/ && java -jar target/*.jar"
  },
  "deploy": {
    "startCommand": "ls -la target/ && java -Xmx512m -Xms256m -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "checks": {
    "enabled": true,
    "path": "/actuator/health",
    "initialDelay": 60,
    "timeout": 5
  }
}